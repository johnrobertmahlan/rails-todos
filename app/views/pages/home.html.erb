<div class="row-fluid">
  <div class="span10 offset1">
    <div class="hero-unit">
      <p>John's ToDo List</p>
      
      <% if @tasks.empty? %>
        <h1>There are no tasks yet!</h1>
      <% else %>
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Note</th>
                    <th>Created At</th>
                    <th>Completed</th>
                </tr>
            </thead>
            <tbody>
                <% @tasks.each do |task| %>
                    <tr>
                        <td><%= task.title %></td>
                        <td><%= task.note %></td>
                        <td><%= task.created_at %></td>
                        <td><%= task.completed %></td>
                    </tr>
                <% end %>
            <tbody>
        </table>
      <% end %>

    </div>
  </div>
</div>